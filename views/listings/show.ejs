<%- layout('/layout/boilerplate') -%>
  <div class="row mt-3">
    <div class="col-8 offset-3">
      <h3>
        <%= listing.title %>
      </h3>
    </div>
    <div class="card col-6 offset-3 show-card">
      <img src="<%= listing.image.url %>" class="card-img-top show-img mt-2 rounded" alt="listing_image" />
      <div class="card-body">
        <p class="card-text">
          <b>
            Listed by: <%= listing.owner.username %>
          </b>
        </p>
        <p class="card-text">
          <b>
            <%= listing.description %>
          </b>
        </p>
        <ul>
          <li>&#8377; <%= listing.price.toLocaleString("en-IN") %>/Pre night</li>
          <li>
            <%= listing.location %>, <%= listing.country %>
          </li>
        </ul>
      </div>
      <% if (currUser && currUser._id.equals(listing.owner._id)) { %>
      <div class="d-flex gap-2">
        <a href="/listings/<%= listing._id %>/edit" class="btn btn-info"> Edit</a>
        <br />
        <form method="POST" action="/listings/<%= listing._id %>/?_method=DELETE">
          <button class="btn btn-danger">Delete</button>
        </form>
      </div>
      <% } %>
      <br />
    </div>
    <br />
    <!-- Review Section -->
     <% if (currUser) { %>
    <div class="card offset-3 col-6 mt-5 mb-5">
      <h4 class="mt-3">Review Section</h4>
      <br />
      <form method="post" action="/listings/<%= listing._id %>/reviews" novalidate class="needs-validation">
        <!-- â­ Star Rating -->
        <div class="mb-3">
          <label class="form-label">Rating</label>
          <div id="starRating" class="star-rating">
            <% for (let i=1; i <=5; i++) { %>
              <i class="fa-regular fa-star text-secondary" data-value="<%= i %>"></i>
              <% } %>
          </div>
          <!-- Hidden input to store selected rating -->
          <input type="hidden" name="review[rating]" id="rating" required>
          <div class="invalid-feedback">Please select a rating</div>
        </div>

        <!-- ðŸ’¬ Comment Box -->
        <div class="mb-3 mt-3">
          <label for="comment" class="form-label">Comment</label>
          <textarea class="form-control" name="review[comment]" id="comment" rows="4" required></textarea>
          <div class="invalid-feedback">Please leave comment</div>
        </div>

        <button class="btn btn-outline-dark mb-3" type="submit">Submit</button>
      </form>
    </div>
    <% } %>
    <!-- All Reviews -->
    <hr class="mt-3 " />
    <div>
      <p><b>All Reviews</b></p>
      <div class="row">
        <% for (review of listing.reviews) { %>
          <div class="card col-6 mb-3 ms-3" style="width: 18rem;">
            <div class="card-body">
              <p class="card-text"><b>Author: <%= review.author.username %></b></p>
              <p class="card-text">Comment:
                <%= review.comment %>
              </p>
              <p class="card-text">Rating:
                <%= review.rating %> stars
              </p>
              <form class="mt-2" method="post" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=Delete">
                <button class="btn btn-danger btn-small">Delete</button>
              </form>
            </div>
          </div>
          <% } %>
      </div>
    </div>
  </div>
  </div>