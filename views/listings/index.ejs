<% layout('/layout/boilerplate') -%>

<div class="features">
  <div class="filters">
    <div class="filter">
      <div><i class="fa-solid fa-fire"></i></div>
      <p>Trending</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-person-swimming"></i></div>
      <p>Pools</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-mountain-sun"></i></div>
      <p>Mountains</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-building"></i></div>
      <p>Building</p>
    </div>
    <div class="filter">
      <div><i class="fa-brands fa-fort-awesome"></i></div>
      <p>Vintage</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-tree"></i></div>
      <p>Greenery</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-hotel"></i></div>
      <p>Hotels</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-bed"></i></div>
      <p>Peace</p>
    </div>
  </div>

  <div class="search-bar">
    <input class="searchbar" type="text" placeholder="Search for Airbnb" />
    <div class="search-icon">
      <i class="fa-solid fa-magnifying-glass"></i>
    </div>
  </div>
</div>
<div class="container py-3">
  <div class="row g-4">
    <% for (let list of allListings) { %>
    <div class="col-md-6 col-lg-4">
      <div class="card h-100 border-0 shadow-lg d-flex flex-column">
        <img
          src="<%= list.image.url %>"
          class="card-img-top rounded-top"
          alt="property image"
        />
        <div class="card-body d-flex flex-column">
          <h5 class="card-title text-dark fw-bold mb-3"><%= list.title %></h5>
          <div class="mt-auto">
            <a
              href="/listings/<%= list._id %>"
              class="btn btn-outline-primary w-100"
              >View Details</a
            >
          </div>
        </div>
      </div>
    </div>
    <% } %>
  </div>
</div>
